{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    // "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2015",
      "ESNext"
    ],
    "paths": {
      "@maxellabs/core": [
        "./packages/core/src"
      ],
      "@maxellabs/math": [
        "./packages/math/src"
      ],
      "@maxellabs/rhi": [
        "./packages/rhi/src"
      ],
      "@maxellabs/specification": [
        "./packages/specification/src"
      ],
      "@maxellabs/engine": [
        "./packages/engine/src"
      ]
    }
  }
}
