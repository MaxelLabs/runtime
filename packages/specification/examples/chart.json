{
  "typeName": "ChartVisualization",
  "name": "BarChart3D",
  "description": "3D柱状图表示例",
  "version": {
    "major": 1,
    "minor": 0,
    "patch": 0
  },
  "chartType": "bar3d",
  "data": {
    "categories": ["Q1", "Q2", "Q3", "Q4"],
    "series": [
      {
        "name": "销售额",
        "values": [120, 150, 180, 200],
        "color": [0.2, 0.6, 1.0, 1.0]
      },
      {
        "name": "利润",
        "values": [30, 45, 60, 80],
        "color": [1.0, 0.4, 0.2, 1.0]
      }
    ]
  },
  "layout": {
    "width": 10.0,
    "height": 8.0,
    "depth": 6.0,
    "spacing": {
      "x": 1.5,
      "z": 1.0
    },
    "origin": [0.0, 0.0, 0.0]
  },
  "axes": {
    "x": {
      "title": "季度",
      "visible": true,
      "gridLines": true,
      "labels": {
        "fontSize": 0.3,
        "color": [0.2, 0.2, 0.2, 1.0],
        "rotation": [0.0, 0.0, 0.0]
      }
    },
    "y": {
      "title": "数值",
      "visible": true,
      "gridLines": true,
      "range": [0, 250],
      "tickInterval": 50,
      "labels": {
        "fontSize": 0.25,
        "color": [0.2, 0.2, 0.2, 1.0],
        "format": "{value}万"
      }
    },
    "z": {
      "title": "类别",
      "visible": true,
      "gridLines": false,
      "labels": {
        "fontSize": 0.3,
        "color": [0.2, 0.2, 0.2, 1.0]
      }
    }
  },
  "bars": {
    "width": 0.8,
    "depth": 0.8,
    "material": {
      "type": "standard",
      "metallic": 0.1,
      "roughness": 0.3,
      "emissive": [0.0, 0.0, 0.0]
    },
    "animation": {
      "enabled": true,
      "duration": 2.0,
      "easing": "easeOutBounce",
      "delay": 0.1
    }
  },
  "legend": {
    "visible": true,
    "position": [8.0, 6.0, 0.0],
    "orientation": "vertical",
    "fontSize": 0.4,
    "spacing": 0.8
  },
  "title": {
    "text": "季度业绩对比",
    "position": [0.0, 9.0, 0.0],
    "fontSize": 0.6,
    "color": [0.1, 0.1, 0.1, 1.0],
    "alignment": "center"
  },
  "interaction": {
    "hover": {
      "enabled": true,
      "highlightColor": [1.0, 1.0, 0.0, 0.3],
      "tooltip": {
        "enabled": true,
        "template": "{series}: {value}万"
      }
    },
    "selection": {
      "enabled": true,
      "multiSelect": false
    }
  },
  "lighting": {
    "ambient": {
      "color": [0.4, 0.4, 0.4],
      "intensity": 0.3
    },
    "directional": {
      "color": [1.0, 1.0, 1.0],
      "intensity": 0.8,
      "direction": [-0.5, -1.0, -0.5],
      "castShadows": true
    }
  }
} 