{
  "typeName": "ParticleSystem",
  "name": "FireParticles",
  "description": "火焰粒子系统示例",
  "version": {
    "major": 1,
    "minor": 0,
    "patch": 0
  },
  "itemType": "particle",
  "emitter": {
    "shape": "sphere",
    "shapeProperties": {
      "radius": 0.5,
      "arc": 360.0,
      "arcMode": "random"
    },
    "emission": {
      "rateOverTime": 50.0,
      "rateOverDistance": 0.0,
      "bursts": [
        {
          "time": 0.0,
          "count": 100,
          "cycles": 1,
          "interval": 0.1,
          "probability": 1.0
        }
      ]
    }
  },
  "main": {
    "duration": 5.0,
    "looping": true,
    "prewarm": false,
    "startLifetime": {
      "mode": "random",
      "constant": 2.0,
      "randomBetween": [1.0, 3.0]
    },
    "startSpeed": {
      "mode": "random",
      "constant": 5.0,
      "randomBetween": [3.0, 8.0]
    },
    "startSize": {
      "mode": "random",
      "constant": 0.1,
      "randomBetween": [0.05, 0.2]
    },
    "startRotation": {
      "mode": "random",
      "constant": 0.0,
      "randomBetween": [0.0, 360.0]
    },
    "startColor": {
      "mode": "gradient",
      "gradient": [
        { "time": 0.0, "color": [1.0, 0.8, 0.2, 1.0] },
        { "time": 0.5, "color": [1.0, 0.4, 0.1, 0.8] },
        { "time": 1.0, "color": [0.8, 0.2, 0.0, 0.0] }
      ]
    },
    "gravityModifier": 0.1,
    "simulationSpace": "world",
    "maxParticles": 1000
  },
  "velocityOverLifetime": {
    "enabled": true,
    "space": "local",
    "velocity": {
      "x": { "mode": "curve", "curve": [0.0, 0.0, 1.0, 2.0] },
      "y": { "mode": "curve", "curve": [0.0, 5.0, 1.0, 0.0] },
      "z": { "mode": "constant", "constant": 0.0 }
    }
  },
  "colorOverLifetime": {
    "enabled": true,
    "color": {
      "mode": "gradient",
      "gradient": [
        { "time": 0.0, "color": [1.0, 1.0, 0.5, 1.0] },
        { "time": 0.3, "color": [1.0, 0.6, 0.2, 0.9] },
        { "time": 0.7, "color": [0.8, 0.3, 0.1, 0.5] },
        { "time": 1.0, "color": [0.5, 0.1, 0.0, 0.0] }
      ]
    }
  },
  "sizeOverLifetime": {
    "enabled": true,
    "size": {
      "mode": "curve",
      "curve": [0.0, 0.2, 0.3, 1.0, 0.7, 1.2, 1.0, 0.0]
    }
  },
  "textureSheetAnimation": {
    "enabled": true,
    "tiles": [4, 4],
    "animation": "wholeSheet",
    "frameOverTime": {
      "mode": "curve",
      "curve": [0.0, 0.0, 1.0, 16.0]
    },
    "startFrame": {
      "mode": "random",
      "randomBetween": [0, 4]
    }
  },
  "renderer": {
    "material": "/materials/particle_fire",
    "renderMode": "billboard",
    "alignment": "view",
    "sortingFudge": 0.0,
    "normalDirection": 1.0,
    "shadowCastingMode": "off",
    "receiveShadows": false
  }
} 