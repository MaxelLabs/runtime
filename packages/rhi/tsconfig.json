{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "rootDir": "src",
    "baseUrl": ".",
    "composite": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": false,
    "types": ["@types/jest", "@types/node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test/**/*"],
  "references": [
    {
      "path": "../math"
    },
    {
      "path": "../core"
    }
  ]
}
